<h2>REGISTER VOLUNTEER</h2>
<h3>Donate time to non-profit organizations.</h3>
<div id="signup_form_v">
  <%= simple_form_for(User.new, :as => :user, :url => registration_path(:user)) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, label: false, placeholder: 'e-mail address', :required => true, :autofocus => true %>
    <%= f.input :password, label: false, placeholder: 'password', :required => true %>
    <%= f.input :password_confirmation, label: false, placeholder: 'password confirmation', :required => true %>
    <%= f.hidden_field :profile_type, :value => "volunteer" %>
    <div class="form-action">
      <%= f.button :submit, "get involved" %>
    </div>
  <% end %>
</div>
