<!DOCTYPE html>
<html>
<head>
  <title>GeekSeek - Connecting technology professionals with non-profit organizations</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Oxygen:300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
</head>

<body>

<div id="header_wrapper"> <!-- start header_wrapper -->
  <div id="header_container"> <!-- start header_container -->
    <%= render 'layouts/navigation' %>
  </div> <!-- end header_container -->
</div> <!-- end header_wrapper -->

<div id="sub-header_wrapper"> <!-- start sub-header_wrapper -->
  <div id="sub-header_container"> <!-- start sub-header_container -->
    <span id="quote">&quot;What we do for ourselves dies with us. What we do for others and the world remains and is immortal.&quot; - Albert Pine</span>
  </div> <!-- end sub-header_container -->
</div> <!-- end sub-header_wrapper -->

<div id="content_wrapper"> <!-- start content_wrapper -->
  <div id="content_container"> <!-- start content_container -->
    <div id="content_left"> <!-- start content_left -->
      <div id="<%= current_user.profile_type %>_menu">
        <%= render "layouts/#{current_user.profile_type}_menu" %>
      </div>
    </div> <!-- end content_left -->

    <div id="content_right"> <!-- start content_right -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div> <!-- end content_right -->

  </div> <!-- end content_container -->
</div> <!-- end content_wrapper -->


<div id="footer_wrapper"> <!-- start footer_wrapper -->
  <div id="footer_container"> <!-- start footer_container -->
    <%= render 'layouts/footer' %>
  </div> <!-- end footer_container -->
</div> <!-- end footer_wrapper -->

<div id="copyright_wrapper"> <!-- start copyright_wrapper -->
  <div id="copyright_container"> <!-- start copyright_container -->
    Copyright &copy; MMXIII <%= link_to 'GeekSeek.me', root_path %>.<br>
    Some rights reserved.
  </div> <!-- end copyright_container -->
</div> <!-- end copyright_wrapper -->

</body>
</html>
