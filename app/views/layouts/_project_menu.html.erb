<%= form_tag browse_projects_path, method: "get", remote: true, id: 'search_form' do %>

  <h2>Causes</h2> 
  <% @causes.each do |cause| %>
    <%= check_box_tag "search[cause_ids][]", cause.id %> <%= cause.cause_type %>
  <% end %>

  <h2>Categories</h2> 
  <% @categories.each do |category| %>
    <%= check_box_tag "search[category_ids][]", category.id %> <%= category.category_type %>
  <% end %>

  <%= submit_tag :submit %>

<% end %>